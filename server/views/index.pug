doctype html
html(lang="en")

  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Tour Guide

    // Favicon
    link(rel="shortcut icon", href="/favicon.svg", type="image/svg+xml")

    // Custom CSS link
    link(rel="stylesheet", href="/stylesheets/style.css")

    // Google Font link
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700;800&family=Poppins:wght@400;500;600;700&display=swap", rel="stylesheet")

  body#top

    // HEADER
    header.header(data-header)

      .overlay(data-overlay)

      .header-top
        .container

          a.helpline-box(href="tel:+905338502322")

            .icon-box
              ion-icon(name="call-outline")

            .wrapper
              p.helpline-title For Further Inquires :
              p.helpline-number +905338502322

          .header-btn-group

            button.nav-open-btn(aria-label="Open Menu", data-nav-open-btn)
              ion-icon(name="menu-outline")

      .header-bottom
        .container

          ul.social-list

            li
              a.social-link(href="#")
                ion-icon(name="logo-facebook")

            li
              a.social-link(href="#")
                ion-icon(name="logo-twitter")

            li
              a.social-link(href="#")
                ion-icon(name="logo-youtube")

          nav.navbar(data-navbar)

            .navbar-top

              a.logo(href="#")
                img(src="logo.svg", alt="Tour Guide logo")

              button.nav-close-btn(aria-label="Close Menu", data-nav-close-btn)
                ion-icon(name="close-outline")

            ul.navbar-list

              li
                a.navbar-link(href="#home", data-nav-link) home

              li
                a.navbar-link(href="#destination", data-nav-link) destination

              li
                a.navbar-link(href="#gallery", data-nav-link) gallery

              li
                a.navbar-link(href="#", data-nav-link) about us

              li
                a.navbar-link(href="#contact", data-nav-link) contact us

          button.btn.btn-primary Book Now

    // MAIN CONTENT
    main
      article

        // HERO SECTION
        section.hero#home
          .container

            form.form#inputForm(action="/" method="POST" enctype="application/x-www-form-urlencoded") 
              input(type='text' name='input' placeholder='Search a landmark, town, city, country...', autocomplete='false', spellcheck='false')

              p.hero-text Not really sure where to go next? Well, we can recommend you, your next tour, just search country or city!

              div.btn-group
                button.btn.btn-primary(type='submit') Learn more
                button.btn.btn-secondary Book now


        // POPULAR DESTINATION SECTION
        section.popular#destination
          .container

            p.section-subtitle Uncover place

            h2.h2.section-title Popular Destinations

            p.section-text Similar destinations you might also like.

            ul.popular-list

              li
                .popular-card

                  figure.card-img
                    img(src="/images/popular-1.jpg", alt="San miguel, italy", loading="lazy")

                  .card-content

                    .card-rating
                      ion-icon(name="star")
                      ion-icon(name="star")
                      ion-icon(name="star")
                      ion-icon(name="star")
                      ion-icon(name="star")

                    p.card-subtitle
                      a(href="#") Italy

                    h3.h3.card-title
                      a(href="#") San miguel

                    p.card-text Fusce hic augue velit wisi ips quibusdam pariatur, iusto.

              li
                .popular-card

                  figure.card-img
                    img(src="/images/popular-2.jpg", alt="Burj khalifa, dubai", loading="lazy")

                  .card-content

                    .card-rating
                      ion-icon(name="star")
                      ion-icon(name="star")
                      ion-icon(name="star")
