
doctype html
html(lang="en")

  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title

    // Favicon
    link(rel="shortcut icon", href="/favicon.svg", type="image/svg+xml")

    // Custom CSS link
    link(rel="stylesheet", href="/stylesheets/style.css")

    // Google Font link
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700;800&family=Poppins:wght@400;500;600;700&display=swap", rel="stylesheet")

  body#top

    // MAIN CONTENT
    main
      article

        // HERO SECTION
        section.hero#home
          .container
            table
              tr
                td
                  form.form#inputForm(action="/" method="POST" enctype="application/x-www-form-urlencoded") 
                    input(type='text' name='input' placeholder='Search a landmark, town, city, country...', autocomplete='false', spellcheck='false')
                    button.btn.btn-primary(type='submit') Search
              tr
                td
                  if data && data.paragraphs && data.allBanners && data.allBanners.banners
                    // GALLERY SECTION
                    section.gallery#destination
                      .container
                        p.section-subtitle= place
                        h2.h2.section-title Details
                        p.section-text= data.paragraphs[1] + data.paragraphs[2]
                        h3.section-text Destinations in #{place}
                        ul.gallery-list
                          each landmark in data.landmarks
                            if landmark.name && landmark.nameHref
                              li.gallery-item
                                p.section-subtitle
                                  a(href='https://en.wikivoyage.org/' + landmark.nameHref)= landmark.name
                                p.section-text= landmark.noteContent

  // Custom JS link
  script(src="/javascripts/script.js")

  // Ionicon link
  script(type="module", src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js")
  script(nomodule, src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js")
